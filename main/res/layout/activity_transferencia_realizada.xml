<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transferencia_realizada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".transferencia_realizada">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferência realizada!"
        android:textSize="27sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="para mais detalhes veja o histórico de transações da sua conta."
        android:textSize="15sp"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="R$100,00"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="para Jose"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texto5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Agora mesmo 21h45"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/botaoInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar ao menu principal"
        android:textStyle="bold"
        android:backgroundTint="#820AD1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="80dp"/>

</LinearLayout>
