<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/senha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".senha">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite sua senha de 4 digitos do seu cartÃ£o"
        android:textStyle="bold"
        android:textColor="#820AD1"
        android:textSize="19sp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/senha1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="90sp"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/senha2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="90sp"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/senha3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="90sp"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/senha4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="90sp"
            android:maxLength="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/botaoTransferenciaRealizada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transferir"
        android:textStyle="bold"
        android:backgroundTint="#820AD1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="80dp"/>

</LinearLayout>
