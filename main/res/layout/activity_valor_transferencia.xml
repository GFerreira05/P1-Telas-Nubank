<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/valor_transferencia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".valor_transferencia">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual é o valor da transferência?"
        android:textSize="27sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto1"
        android:text="Saldo disponível em conta R$ 100.000,00"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/edittexto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto2"
        android:layout_marginTop="15dp"
        android:hint="R$ 0,00"
        android:textSize="27sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:id="@+id/botaoParaQuem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:contentDescription="@string/desc_share"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_forward" />

</RelativeLayout>
